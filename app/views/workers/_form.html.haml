= form_for @worker do |f|
  - if @worker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@worker.errors.count, "error")} prohibited this worker from being saved:"
      %ul
        - @worker.errors.full_messages.each do |message|
          %li= message

  .form-group
    %p.text-left.color-blue
      %b Nombre completo
    = f.text_field :fullname, class: "form-control"
  .form-group
    %p.text-left.color-blue
      %b CÃ³digo del empleado
    = f.text_field :codigo, class: "form-control"
  .form-group
    %p.text-left.color-blue
      %b Agencia
    = f.text_field :agencia, class: "form-control"
  .form-group
    %p.text-left.color-blue
      %b Cargo
    = f.text_field :cargo, class: "form-control"
  .form-group
    %p.text-left.color-blue
      %b Fecha de ingreso
    .input-group
      %span.input-group-btn
        %button{class:"btn", type:"button"}
          Calendario
      = text_field "worker", :fecha_ingreso, class:"form-control datepick", id: "datepicker1"
  .form-group
    %p.text-left.color-blue
      %b Fecha de calculo de vacaciones
    .input-group
      %span.input-group-btn
        %button{class:"btn", type:"button"}
          Calendario
      = text_field "worker", :fecha_calculo, class:"form-control datepick", id: "datepicker2"


  .actions
    = f.submit 'Enviar', class: "btn btn-success"
