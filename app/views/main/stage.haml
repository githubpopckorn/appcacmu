.row.center-xs
  .col-xs-11
    %h4 Estados de los juicios con bienes
    .table-responsive
      %table.table.table-striped.table-hover
        %thead
          %tr.text-center
            %th Nombre Etapa
            %th Mes
            %th Ingresar proceso

        %tbody
          - @conBienes.each do |good_stage|
            %tr
              %td= good_stage.name
              %td= good_stage.months
              %td= link_to 'Ingresar proceso', new_good_activity_path(good_stage: good_stage), class: "btn btn-wide btn-inverse"

