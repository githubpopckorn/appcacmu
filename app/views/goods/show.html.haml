%h3.text-center
  Datos del credito
  %small= @good.credit_id
  %small
    %span.label{class: "#{@semaforo_actual[1]}"}
      = @semaforo_actual[0]
%h5.text-center
  Juicio
  %small.color-cyan-400= @good.estado

.row.center-xs
  .col-xs-11
    = img_juicio @good.good_stage.name, 'bienes'
    = render partial: "partials/creditos/buttons_states", locals: {tipo: "bienes", trial: @good} if current_user.permissions == 5
.row.center-xs
  .col-xs-6.top-space.text-left
    .card.bg-color-white.padding
      %h4.text-center Datos del Credito
      %hr
      .row
        .col-xs-6
          %p
            %b Id Crédito:
            = @good.credit_id
          %p
            %b Id Socio:
            = @good.socio_id
          %p
            %b Nombre grupo:
            = @good.nombre_grupo
          %p
            %b Grupo solidario:
            = @good.grupo_solidario

        .col-xs-6
          %p
            %b Bienes:
            = @good.bienes
          %p
            %b Tipo crédito:
            = @good.tipo_credito
          %p
            %b Etapa:
            = @good.good_stage.name
          %p
            %b Proceso:
            = @good.good_activity.name
          %p
            %b Estado:
            = @good.estado

  .col-xs-5.top-space
    .card.bg-color-white.padding.bottom-space
      %h4.text-center Datos del Cliente
      %hr
      .row.text-left
        .col-xs-6
          %p
            %b Nombres:
            = @good.nombres
          %p
            %b Cedula:
            = @good.cedula
          %p
            %b Teléfono:
            = @good.telefono
          %p
            %b Celular:
            = @good.celular

        .col-xs-6
          %p
            %b Dirección:
            = @good.direccion
          %p
            %b Sector:
            = @good.sector
          %p
            %b Parroquia:
            = @good.parroquia
          %p
            %b Cantón:
            = @good.canton
          %p
            %b Sucursal:
            = @good.sucursal

  .col-xs-11
    .card.bg-color-white.padding
      %h4.text-center Datos Extras
      %hr
      .row.text-left
        .col-xs-4
          %p
            %b Oficial credito:
            = @good.oficial_credito
          %p
            %b Cartera heredada:
            = @good.cartera_heredada
          %p
            %b Fecha concesion:
            = @good.fecha_concesion
          %p
            %b Fecha vencimiento:
            = @good.fecha_vencimiento
        .col-xs-4
          %p
            %b Tipo garantia:
            = @good.tipo_garantia
          %p
            %b Garantia real:
            = @good.garantia_real
          %p
            %b Garantia fiduciaria:
            = @good.garantia_fiduciaria
        .col-xs-4
          %p
            %b Dir garante:
            = @good.dir_garante
          %p
            %b Tel garante:
            = @good.tel_garante
          %p
            %b Valor cartera castigada:
            = @good.valor_cartera_castigada

  .col-xs-5.top-space
    .card.bg-color-white.padding
      %h4.text-center Datos Extras
      %hr
      .row.text-left
        .col-xs-6
          %p
            %b Monto real:
            = @variables[0]["MONTO_REAL"]
          %p
            %b Saldo total:
            = @variables[0]["SALDO_TOTAL"]
          %p
            %b Valor cancela:
            = @variables[0]["VALOR_CANCELA"]
        .col-xs-6
          %p
            %b Días de mora:
            = @variables[0]["DIASMORA_PD"]
          %p
            %b Provisión requerida:
            = @variables[0]["PROVISION_REQUERIDA"]
          %p
            %b Calificación propia:
            = @variables[0]["CALIFICACION_PROPIA"]

  .col-xs-6.text-left
    .card.bg-color-red-200.padding.bottom-space.top-space
      %h4.text-center Datos Judiciales
      %hr
      .row.text-left
        - if current_user.permissions == 4
          .col-xs-6
            %p
              %b Abogado
              = best_in_place(@good, :lawyer_id, :as => :select, collection: Lawyer.collection)
            %p
              %b Juicio:
              = best_in_place @good, :juicio_id
            %p
              %b Fecha entrega del juicio:
              = best_in_place @good, :fentrega_juicios, as: :date
          .col-xs-6
            %p
              %b Fecha calificacion de juicio:
              = best_in_place @good, :fcalificacion_juicio, as: :date
            %p
              %b Codigo juicio:
              = best_in_place @good, :codigo_juicio
        - else
          .col-xs-6
            %p
              %b Abogado
              = @good.lawyer.full_name
            %p
              %b Juicio:
              = @good.juicio_id
            %p
              %b Fecha entrega juicios:
              = @good.fentrega_juicios.strftime('%B %d, del %Y') if @good.fentrega_juicios
          .col-xs-6
            %p
              %b Fecha calificacion juicio:
              = @good.fcalificacion_juicio.strftime('%B %d, del %Y') if @good.fcalificacion_juicio
            %p
              %b Código juicio:
              = @good.codigo_juicio


  - if current_user.permissions == 4
    .col-xs-10.start-xs.top-space
      %h4.text-center Observaciones
      %p.text-left
        = best_in_place @good, :observaciones, :as => :textarea
  - else
    .col-xs-10.start-xs.top-space
      %h4.text-center Observaciones
      %p.text-left= @good.observaciones